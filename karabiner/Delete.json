{
  "title": "Shortcuts for Delete Letters and Words",
  "rules": [
    {
      "description": "Delete Previous Word",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "modifiers": {
              "mandatory": ["left_control"]
            },
            "key_code": "j"
          },
          "to": [
            {
              "repeat": true,
              "key_code": "delete_or_backspace",
              "modifiers": ["left_alt"]
            }
          ]
        }
      ]
    }
  ]
}
